<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gridLayout"
    >
    <ImageView
        android:id="@+id/GridPic"
        android:layout_width="69dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/category_salads" />

    <TextView
        android:id="@+id/GridName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Салаты"
        app:layout_constraintEnd_toEndOf="@+id/GridPic"
        app:layout_constraintStart_toStartOf="@+id/GridPic"
        app:layout_constraintTop_toBottomOf="@+id/GridPic" />
</androidx.constraintlayout.widget.ConstraintLayout>