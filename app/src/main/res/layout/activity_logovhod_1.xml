<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logoback"
    android:gravity="center"
    android:orientation="vertical"
    android:outlineSpotShadowColor="@color/black"
    android:padding="15dp"
    tools:context=".Login">

    <TextView
        android:id="@+id/textView"
        android:layout_width="146dp"
        android:layout_height="85dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="284dp"
        android:fontFamily="@font/lora_bold"
        android:gravity="center"
        android:text="EDA"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"

        android:layout_width="74dp"
        android:layout_height="75dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="228dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flatware_silhouette_of_a_knife_and_a_fork_cross_rd5vyp8d1cb4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        android:layout_width="195dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="136dp"
        android:background="@drawable/transparent_1"
        android:elevation="20dp"
        android:fontFamily="@font/lora_bold"
        android:text="Регистрация"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button5"
        android:layout_width="195dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="196dp"
        android:background="@drawable/transparent_3"
        android:elevation="20dp"
        android:fontFamily="@font/lora_bold"
        android:text="Войти"
        android:textColor="@color/orange_color"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>